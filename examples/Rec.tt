module Rec where

Sigma : (A : Type) -> (B : A -> Type) -> Type
Sigma A B = [fst : A ;
             snd : B fst]


first : (A : Type) -> (B : A -> Type) -> Sigma A B -> A
first A B r = r.fst

second : (A : Type) -> (B : A -> Type) -> (r : Sigma A B) -> B (r.fst)
second A B r = r.snd


second' : (A : Type) -> (B : A -> Type) -> (r : Sigma A B) -> B (first A B r)
second' A B r = r.snd








